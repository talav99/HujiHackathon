{
  "manifest_version": 3,
  "name": "Text Saver",
  "version": "0.1",
  "description": "Right-click text to save and display selected text",
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "View saved text"
  }
}